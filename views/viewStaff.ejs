<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Staff</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      margin: 0;
      padding: 0;
    }

    .content-wrapper {
      margin-left: 250px; /* Width of the sidebar */
      padding: 30px;
    }

    .search-form {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .table-container {
      overflow-x: auto;
    }

    .table {
      min-width: 100%;
      table-layout: auto;
    }

    .btn-search {
      white-space: nowrap;
    }

    @media (max-width: 768px) {
      .content-wrapper {
        margin-left: 0;
        padding: 15px;
      }

      .search-form {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <%- include("sidebar.ejs") %>

  <div class="content-wrapper">
    <h2 class="text-center mb-4">Staff List</h2>

    <form class="search-form" method="get" action="/staffs/view">
      <input type="text" name="search" class="form-control" placeholder="Search by name or email" value="<%= search || '' %>">
      <button class="btn btn-primary btn-search" type="submit">Search</button>
    </form>

    <% if (msg) { %>
      <div class="alert alert-info text-center"><%= msg %></div>
    <% } %>

    <div class="table-container">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Salary</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (staffs.length > 0) { %>
            <% staffs.forEach((staff) => { %>
              <tr>
                <td><%= staff.staff_id %></td>
                <td><%= staff.name %></td>
                <td><%= staff.email %></td>
                <td><%= staff.contact_no %></td>
                <td>â‚¹<%= staff.salary %></td>
                <td>
                  <a href="/staffs/edit/<%= staff.staff_id %>" class="btn btn-sm btn-warning">Edit</a>
                  <a href="/staffs/delete/<%= staff.staff_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this staff member?');">Delete</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center">No staff records found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <a href="/staffs/add" class="btn btn-success">Add New Staff</a>
    </div>
  </div>
</body>
</html>
