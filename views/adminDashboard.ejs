<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - RestoBill</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <style>
      body {
        background-color: #f8f9fa;
      }
      .sidebar {
        height: 100vh;
        background-color: #343a40;
        color: white;
        padding: 20px;
      }
      .sidebar a,
      .sidebar .dropdown-toggle {
        color: white;
        display: block;
        margin: 10px 0;
        text-decoration: none;
      }
      .sidebar a:hover,
      .sidebar .dropdown-toggle:hover {
        color: #ffc107;
      }
      .dashboard-box {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        margin: 15px 0;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .dashboard-box i {
        font-size: 30px;
        margin-bottom: 10px;
        color: #dc3545;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar">
          <h4 class="text-center mb-4">üç¥ SANCHAN'S<br />KITCHEN</h4>
          <a href="/admin"><i class="fas fa-home"></i> Dashboard</a>

          <!-- Category Dropdown -->
          <div class="dropdown">
            <a class="dropdown-toggle" href="#" data-bs-toggle="dropdown">
              <i class="fas fa-layer-group"></i> Category
            </a>
            <ul class="dropdown-menu bg-dark border-0">
              <li>
                <a class="dropdown-item text-white" href="/addcat"
                  >‚ûï Add Category</a
                >
              </li>
              <li>
                <a class="dropdown-item text-white" href="/viewCategory"
                  >üëÅ View Categories</a
                >
              </li>
            </ul>
          </div>

          <!-- Menu Dropdown -->
          <div class="dropdown">
            <a class="dropdown-toggle" href="#" data-bs-toggle="dropdown">
              <i class="fas fa-utensils"></i> Menu
            </a>
            <ul class="dropdown-menu bg-dark border-0">
              <li>
                <a class="dropdown-item text-white" href="/menu/add"
                  >‚ûï Add Menu</a
                >
              </li>
              <li>
                <a class="dropdown-item text-white" href="/menu/view"
                  >üëÅ View Menus</a
                >
              </li>
            </ul>
          </div>

          <!-- Staffs Dropdown -->
          <div class="dropdown">
            <a class="dropdown-toggle" href="#" data-bs-toggle="dropdown">
              <i class="fas fa-users"></i> Staffs
            </a>
            <ul class="dropdown-menu bg-dark border-0">
              <li>
                <a class="dropdown-item text-white" href="/staffs/add"
                  >‚ûï Add Staff</a
                >
              </li>
              <li>
                <a class="dropdown-item text-white" href="/staffs/view"
                  >üëÅ View Staffs</a
                >
              </li>
            </ul>
          </div>

          <!-- Tables Dropdown -->
          <div class="dropdown">
            <a class="dropdown-toggle" href="#" data-bs-toggle="dropdown">
              <i class="fas fa-chair"></i> Tables
            </a>
            <ul class="dropdown-menu bg-dark border-0">
              <li>
                <a class="dropdown-item text-white" href="/tables/add"
                  >‚ûï Add Table</a
                >
              </li>
              <li>
                <a class="dropdown-item text-white" href="/tables/view"
                  >üëÅ View Tables</a
                >
              </li>
            </ul>
          </div>

          <a href="/orders"><i class="fas fa-receipt"></i> Orders</a>
          <a href="/bills"><i class="fas fa-file-invoice-dollar"></i> Bills</a>
          <a href="/reports"><i class="fas fa-chart-line"></i> Reports</a>
          <a href="/logout" class="btn btn-danger">Logout</a>
        </div>

        <!-- Main Content -->
        <div class="col-md-10 p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Welcome to Admin Dashboard</h2>
            <!-- <a href="/logout" class="btn btn-danger">Logout</a> -->
          </div>

          <div class="row">
            <div class="col-md-3">
              <div class="dashboard-box text-center">
                <i class="fas fa-store-alt"></i>
                <h5>Total Categories</h5>
                <h3>2</h3>
              </div>
            </div>
            <div class="col-md-3">
              <div class="dashboard-box text-center">
                <i class="fas fa-utensils"></i>
                <h5>Total Menus</h5>
                <h3>4</h3>
              </div>
            </div>
            <div class="col-md-3">
              <div class="dashboard-box text-center">
                <i class="fas fa-chair"></i>
                <h5>Total Tables</h5>
                <h3>8</h3>
                <div>
                  <span class="badge bg-success">Available: 8</span>
                  <span class="badge bg-secondary">Occupied: 0</span>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="dashboard-box text-center">
                <i class="fas fa-receipt"></i>
                <h5>Total Orders</h5>
                <h3>5</h3>
                <div>
                  <span class="badge bg-primary">Completed: 5</span>
                  <span class="badge bg-warning text-dark">Pending: 0</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
