<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - RestoBill</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <style>
      body {
        background-color: #f8f9fa;
      }
      .sidebar-wrapper {
        height: 105vh;
        background-color: #343a40;
        color: white;
        padding: 20px;
      }
      .sidebar-wrapper a,
      .sidebar-wrapper .dropdown-toggle {
        color: white;
        display: block;
        margin: 10px 0;
        text-decoration: none;
      }
      .sidebar-wrapper a:hover,
      .sidebar-wrapper .dropdown-toggle:hover {
        color: #ffc107;
      }
      .dashboard-box {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        margin: 15px 0;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .dashboard-box i {
        font-size: 30px;
        margin-bottom: 10px;
        color: #dc3545;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">

        <!-- ‚úÖ SIDEBAR DIV -->
        <div class="col-md-2 sidebar-wrapper">
          <nav id="sidebar" class="d-flex flex-column">
            <!-- Brand -->
            <h4><i class="fa-solid fa-utensils"></i><br>SANCHAN'S<br>KITCHEN</h4>
        
            <!-- Dashboard -->
            <a href="/admin"><i class="fa-solid fa-house"></i> Dashboard</a>
        
            <!-- Category -->
            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#catMenu">
              <i class="fa-solid fa-layer-group"></i> Category
            </a>
            <div id="catMenu" class="collapse">
              <a href="/addcat">‚ûï Add Category</a>
              <a href="/viewCategory">üëÅ View Categories</a>
            </div>
        
            <!-- Menu -->
            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#menuMenu">
              <i class="fa-solid fa-utensils"></i> Menu
            </a>
            <div id="menuMenu" class="collapse">
              <a href="/menu/add">‚ûï Add Menu</a>
              <a href="/menu/view">üëÅ View Menus</a>
            </div>
        
            <!-- Staffs -->
            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#staffMenu">
              <i class="fa-solid fa-users"></i> Staffs
            </a>
            <div id="staffMenu" class="collapse">
              <a href="/staffs/add">‚ûï Add Staff</a>
              <a href="/staffs/view">üëÅ View Staffs</a>
            </div>
        
            <!-- Tables -->
            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#tableMenu">
              <i class="fa-solid fa-chair"></i> Tables
            </a>
            <div id="tableMenu" class="collapse">
              <a href="/tables/add">‚ûï Add Table</a>
              <a href="/tables/view">üëÅ View Tables</a>
            </div>
        
            <!-- Single‚Äëlink items -->
            <a href="/orders"><i class="fa-solid fa-receipt"></i> Orders</a>
            <a href="/bills"><i class="fa-solid fa-file-invoice-dollar"></i> Bills</a>
            <a href="/reports"><i class="fa-solid fa-chart-line"></i> Reports</a>
            <a href="/logout" class="btn btn-danger mt-3 w-100 text-start">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </nav>
        </div>

        <!-- ‚úÖ DASHBOARD CONTENT DIV -->
        <div class="col-md-10 p-4 dashboard-wrapper">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Welcome to Admin Dashboard</h2>
          </div>

          <div class="row">
            <div class="col-md-3">
              <div class="dashboard-box text-center">
                <i class="fas fa-store-alt"></i>
                <h5>Total Categories</h5>
                <h3>2</h3>
              </div>
            </div>
            <div class="col-md-3">
              <div class="dashboard-box text-center">
                <i class="fas fa-utensils"></i>
                <h5>Total Menus</h5>
                <h3>4</h3>
              </div>
            </div>
            <div class="col-md-3">
              <div class="dashboard-box text-center">
                <i class="fas fa-chair"></i>
                <h5>Total Tables</h5>
                <h3>8</h3>
                <div>
                  <span class="badge bg-success">Available: 8</span>
                  <span class="badge bg-secondary">Occupied: 0</span>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="dashboard-box text-center">
                <i class="fas fa-receipt"></i>
                <h5>Total Orders</h5>
                <h3>5</h3>
                <div>
                  <span class="badge bg-primary">Completed: 5</span>
                  <span class="badge bg-warning text-dark">Pending: 0</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- End dashboard-wrapper -->
      </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
