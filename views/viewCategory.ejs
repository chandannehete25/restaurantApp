<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>View Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      body {
        font-family: Arial, sans-serif;
      }

      .main-container {
        margin-left: 250px; /* Adjust this if sidebar width is different */
        padding: 30px 15px;
      }

      .view-box {
        max-width: 600px;
        margin: auto;
      }

      .table thead {
        background-color: #ff4d00;
        color: white;
      }

      .table td, .table th {
        padding: 0.4rem;
        font-size: 0.95rem;
        vertical-align: middle;
      }

      .btn-action {
        border: none;
        background: none;
        cursor: pointer;
        font-size: 1.1rem;
      }

      .btn-edit {
        color: green;
      }

      .btn-delete {
        color: red;
      }
    </style>
  </head>
  <body>
    <%- include("sidebar.ejs")%>

    <div class="main-container">
      <div class="view-box">
        <h4 class="mb-3 text-center">View Categories</h4>

        <div class="mb-3">
          <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Search category..." />
        </div>

        <div class="card p-3">
          <table class="table table-sm table-bordered text-center">
            <thead>
              <tr>
                <th style="width: 60px;">ID</th>
                <th>Category Name</th>
                <th style="width: 100px;">Actions</th>
              </tr>
            </thead>
            <tbody id="categoryTableBody">
              <% if (categories.length > 0) { %>
                <% categories.forEach((cat) => { %>
                  <tr>
                    <td><%= cat.id %></td>
                    <td><%= cat.name %></td>
                    <td>
                      <a href="/editCategory/<%= cat.id %>" class="btn-action btn-edit" title="Edit">‚úèÔ∏è</a>
                      <a href="/deleteCategory/<%= cat.id %>" class="btn-action btn-delete" title="Delete">üóëÔ∏è</a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3">No categories found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="/js/ajax.js"></script>
  </body>
</html>
