<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>View Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .table thead {
      background-color: #ff4d00;
      color: white;
    }
    .btn-action {
      border: none;
      background: none;
      cursor: pointer;
    }
    .btn-edit {
      color: green;
    }
    .btn-delete {
      color: red;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h3 class="mb-4 text-center">View Categories</h3>
    <div class="mb-3">
      <input type="text" class="form-control" placeholder="Search category..." />
    </div>
    <div class="card p-3">
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (categories.length > 0) { %>
            <% categories.forEach((cat) => { %>
              <tr>
                <td><%= cat.id %></td>
                <td><%= cat.name %></td>
                <td>
                  <a href="/editCategory/<%= cat.id %>" class="btn-action btn-edit" title="Edit">‚úèÔ∏è</a>
                  <a href="/deleteCategory/<%= cat.id %>" class="btn-action btn-delete" title="Delete">üóëÔ∏è</a>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="3">No categories found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
