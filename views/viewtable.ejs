<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Tables</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <style>
    body {
      background-color: #f8f9fa;
    }

    .container {
      margin-left: 20px;
    }

    .card {
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(235, 114, 15, 0.1);
      margin: 0 auto;
      max-width: 900px;
      margin-left: 26%;
      margin-top: 100px;
    }

    .table {
      width: 100%;
      margin: 0 auto;
      justify-content: center;
    }

    .table > thead > tr > th {
      background-color: #040404 !important;
      color: white !important;
      text-align: center;
    }

    .table td {
      vertical-align: middle;
      text-align: center;
    }

    .search-box {
      border-radius: 20px;
      padding: 10px 15px;
    }
  </style>
</head>
<body>
  <%- include("sidebar.ejs") %>

  <div class="container mt-5">
    <div class="card" style="max-width: 900px;">
      <div class="card-body">
        <h4 class="text-center mb-4">View Dining Table</h4>

        <!-- ✅ Add ID to the input -->
        <input type="text" id="searchInput" class="form-control search-box mb-3" placeholder="🔍 Search Dining Table...">

        <div class="table-responsive table-container">
          <!-- ✅ Add ID to the table -->
          <table id="diningTable" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Capacity</th>
                <th>Availability Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (dinning_table.length > 0) { %>
                <% dinning_table.forEach(dinning_table => { %>
                  <tr>
                    <td><%= dinning_table.table_id %></td>
                    <td><%= dinning_table.capacity %></td>
                    <td><%= dinning_table.availability_status %></td>
                    <td>
                      <a href="/tables/viewtable/<%= dinning_table.table_id %>" class="btn btn-sm btn-warning me-2">Edit</a>
                      <a href="/tables/delete/<%= dinning_table.table_id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4">No dining tables found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- ✅ Working Search Script -->
  <script>
    document.getElementById('searchInput').addEventListener('keyup', function () {
      const input = this.value.toLowerCase();
      const rows = document.querySelectorAll('#diningTable tbody tr');

      rows.forEach(row => {
        const rowText = row.textContent.toLowerCase();
        row.style.display = rowText.includes(input) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
