<!DOCTYPE html>
<html>
<head>
  <title>Edit Staff</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <%- include("sidebar.ejs")%>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Edit Staff</h2>

    <% if (msg) { %>
      <div class="alert alert-info text-center"><%= msg %></div>
    <% } %>
        
    <form action="/staffs/update/<%= staff.staff_id %>" method="post" class="mx-auto" style="max-width: 500px;">
      <input type="hidden" name="id" value="<%= staff.staff_id %>">

      <div class="mb-3">
        <label for="name" class="form-label">Staff Name</label>
        <input type="text" name="name" class="form-control" id="name" value="<%= staff.name %>" required>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" name="email" class="form-control" id="email" value="<%= staff.email %>" required>
      </div>

      <div class="mb-3">
        <label for="contact" class="form-label">Contact Number</label>
        <input type="text" name="contact_no" class="form-control" id="contact" value="<%= staff.contact_no %>" required>
      </div>

      <div class="mb-3">
        <label for="salary" class="form-label">Salary</label>
        <input type="number" name="salary" class="form-control" id="salary" value="<%= staff.salary %>" required>
      </div>

      <button type="submit" class="btn btn-primary w-100">Update Staff</button>
    </form>

    <div class="text-center mt-3">
      <a href="/staffs/view" class="btn btn-secondary">Back to Staff List</a>
    </div>
  </div>
</body>
</html>
